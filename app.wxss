@import "./styles/iconfont.wxss";
/* 设置全局样式 */
page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
/*
主题颜色 通过变量来实现
1 less中存在变量这个知识
2 css中的wxss也是支持变量的
*/
page{
    /* 定义主题颜色 */
    --themeColor: #ccffff;
    /* 统一字体大小 */
    font-size: 32rpx;
}
image{
    width: 100%;
}