}
.goods_item{
    display: flex;
    border-bottom: 1rpx solid #ccc;
}
.goods_item .goods_img_wrap{
    flex: 2;
    display: flex;
    justify-content: center;
    align-content: center;
}
.goods_item .goods_img_wrap image{
    width: 70%;
}
.goods_item .goods_info_wrap{
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
/* 设置多行文本超出省略 */
.goods_item .goods_info_wrap .goods_name{
    display: -webkit-box;
    overflow: hidden;/* 文字溢出部分隐藏 */
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;/* 限制文本的行数 */
}
.goods_item .goods_info_wrap .goods_price{
    color: red;
}